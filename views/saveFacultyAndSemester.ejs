<%-include("includes/header")%>

<main id="saveFacultyAndSemesterScreen">
  <h2>Hello, <%=user.name%></h2>
  <h3>Welcome to <span class="color--brand">NoteIT</span></h3>
  <p>
    Help us personalize the app just for you by choosing your current faculty
    and semester.
  </p>
  <form
    id="saveFacultyAndSemester__form"
    action="/users/saveFacultyAndSemester"
    method="POST"
  >
    <input id="faculty" type="text" name="faculty" placeholder="faculty" />
    <input id="semester" type="text" name="semester" placeholder="semester" />
    <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
    <button type="submit">Save</button>
  </form>
</main>

<%-include("includes/footer")%>
